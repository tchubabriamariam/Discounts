@{
    ViewData["Title"] = "Verify Coupon";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Verify Coupon</h1>
        <a asp-controller="Merchant" asp-action="Dashboard" class="btn btn-outline-secondary">Dashboard</a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Step 1: Enter Coupon Code</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Ask the customer to show their coupon code and enter it below to verify.</p>

                    <form asp-action="VerifyCoupon" method="post">
                        @Html.AntiForgeryToken()

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="mb-3">
                            <label for="code" class="form-label">Coupon Code</label>
                            <input type="text" name="code" id="code" class="form-control form-control-lg"
                                   placeholder="e.g. JHTQM4JQ1DCY"
                                   style="font-family: monospace; letter-spacing: 2px; text-transform: uppercase;"
                                   required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Verify Coupon
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
