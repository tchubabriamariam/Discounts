@using Discounts.Application.DTOs.Categories
@model Discounts.Application.DTOs.Categories.UpdateCategoryRequestDto

@{
    ViewData["Title"] = "Edit Category";
    var categoryInfo = ViewBag.CategoryInfo as CategoryResponseDto;
}

<style>
    .page-wrap {
        padding: 2rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .page-header h1 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .form-card {
        background: #1e293b;
        border-radius: 8px;
        padding: 1.75rem;
        max-width: 560px;
    }

    .info-bar {
        background: #0891b2;
        color: #fff;
        border-radius: 6px;
        padding: 0.65rem 1rem;
        font-size: 0.8rem;
        margin-bottom: 1.25rem;
    }

    .info-bar strong {
        opacity: 0.85;
    }

    .form-card .form-label {
        color: #cbd5e1;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 0.35rem;
    }

    .form-card .form-control {
        background: #0f172a;
        border: 1px solid #334155;
        border-radius: 6px;
        color: #f1f5f9;
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
        transition: border-color 0.15s;
    }

    .form-card .form-control:focus {
        background: #0f172a;
        border-color: #2563eb;
        color: #f1f5f9;
        box-shadow: none;
        outline: none;
    }

    .form-card .text-danger {
        font-size: 0.78rem;
    }

    .btn-primary-flat {
        background: #2563eb;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        transition: filter 0.15s;
    }

    .btn-primary-flat:hover {
        filter: brightness(1.12);
        color: #fff;
    }

    .btn-secondary-flat {
        background: #475569;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        transition: filter 0.15s;
    }

    .btn-secondary-flat:hover {
        filter: brightness(1.12);
        color: #fff;
    }
</style>

<div class="page-wrap">
    <div class="page-header">
        <h1>Edit Category</h1>
        <a asp-action="Index" class="btn-secondary-flat">&larr; Back</a>
    </div>

    <div class="form-card">
        @if (categoryInfo != null)
        {
            <div class="info-bar">
                <strong>Offer Count:</strong> @categoryInfo.OfferCount &nbsp;|&nbsp;
                <strong>Status:</strong> @(categoryInfo.IsActive ? "Active" : "Inactive") &nbsp;|&nbsp;
                <strong>Created:</strong> @categoryInfo.CreatedAt.ToString("dd MMM yyyy")
            </div>
        }

        <form asp-action="Edit" asp-route-id="@ViewBag.CategoryId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IconUrl" class="form-label">Icon URL (optional)</label>
                <input asp-for="IconUrl" class="form-control" />
                <span asp-validation-for="IconUrl" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn-primary-flat">Save Changes</button>
                <a asp-action="Index" class="btn-secondary-flat">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
