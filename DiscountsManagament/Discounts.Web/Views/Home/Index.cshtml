@using Discounts.Application.DTOs.Categories
@model IEnumerable<Discounts.Application.DTOs.Offers.OfferResponseDto>

@{
    ViewData["Title"] = "Browse Offers";
}

<div class="container mt-4">
    <h1>Browse Discount Offers</h1>
    <p class="lead">Find the best deals in Georgia!</p>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select name="categoryId" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var category in ViewBag.Categories as IEnumerable<CategoryResponseDto>)
                            {
                                <option value="@category.Id" selected="@(category.Id == ViewBag.SelectedCategoryId)">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Min Price</label>
                        <input type="number" name="minPrice" class="form-control" placeholder="Min" value="@ViewBag.MinPrice" step="0.01" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Max Price</label>
                        <input type="number" name="maxPrice" class="form-control" placeholder="Max" value="@ViewBag.MaxPrice" step="0.01" />
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Offers Grid -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var offer in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(offer.ImageUrl))
                        {
                            <img src="@offer.ImageUrl" class="card-img-top" alt="@offer.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span style="font-size: 3rem;">📦</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@offer.Title</h5>
                            <p class="card-text">
                                <span class="badge bg-info">@offer.CategoryName</span>
                                <span class="badge bg-secondary">@offer.MerchantCompanyName</span>
                            </p>
                            <p class="card-text text-muted">
                                @if (offer.Description?.Length > 100)
                                {
                                    @offer.Description.Substring(0, 100)
                                }
                                else
                                {
                                    @offer.Description
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-muted text-decoration-line-through">₾@offer.OriginalPrice</span>
                                    <span class="h5 text-success ms-2">₾@offer.DiscountedPrice</span>
                                </div>
                                <span class="badge bg-success">@offer.DiscountPercentage% OFF</span>
                            </div>
                            <p class="mt-2 mb-1 text-muted small">
                                🎟️ @offer.RemainingCoupons / @offer.TotalCoupons available
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Offers" asp-action="Details" asp-route-id="@offer.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No offers found</h4>
            <p>Try adjusting your filters or check back later for new deals!</p>
        </div>
    }
</div>
