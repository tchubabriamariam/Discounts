@model IEnumerable<Discounts.Application.DTOs.Offers.OfferResponseDto>

@{
    ViewData["Title"] = "Merchant Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Merchant Dashboard</h1>
        <a asp-controller="MerchantOffers" asp-action="Create" class="btn btn-primary">
            + Create New Offer
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h2>@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Approved</h5>
                    <h2>@Model.Count(o => o.Status == OfferStatus.Approved)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Pending</h5>
                    <h2>@Model.Count(o => o.Status == OfferStatus.Pending)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Rejected</h5>
                    <h2>@Model.Count(o => o.Status == OfferStatus.Rejected)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">Expired</h5>
                    <h2>@Model.Count(o => o.Status == OfferStatus.Expired)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Cancelled</h5>
                    <h2>@Model.Count(o => o.Status == OfferStatus.Cancelled)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Offers Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h5 class="mb-0">My Offers</h5>
            <a asp-controller="MerchantOffers" asp-action="MyOffers" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Coupons</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var offer in Model.Take(5))
                        {
                            <tr>
                                <td>@offer.Title</td>
                                <td>@offer.CategoryName</td>
                                <td>â‚¾@offer.DiscountedPrice</td>
                                <td>@offer.RemainingCoupons / @offer.TotalCoupons</td>
                                <td>
                                    @if (offer.Status == OfferStatus.Approved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (offer.Status == OfferStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (offer.Status == OfferStatus.Rejected)
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                        @if (!string.IsNullOrEmpty(offer.RejectionReason))
                                        {
                                            <br /><small class="text-danger">@offer.RejectionReason</small>
                                        }
                                    }
                                    else if (offer.Status == OfferStatus.Expired)
                                    {
                                        <span class="badge bg-secondary">Expired</span>
                                    }
                                    else if (offer.Status == OfferStatus.Cancelled)
                                    {
                                        <span class="badge bg-dark">Cancelled</span>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="MerchantOffers" asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No offers yet. <a asp-controller="MerchantOffers" asp-action="Create">Create your first offer!</a>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Merchant" asp-action="SalesHistory" class="btn btn-outline-secondary">
            View Sales History
        </a>
    </div>
</div>
